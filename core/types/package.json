{
  "name": "@verdaccio/types",
  "version": "5.0.0",
  "description": "verdaccio flow types definitions",
  "repository": {
    "type": "git",
    "url": "git://github.com/verdaccio/flow-types"
  },
  "main": "lib/types.js.flow",
  "scripts": {
    "precommit": "lint-staged",
    "lint": "eslint .",
    "prepublish": "npm run build",
    "format": "prettier --write",
    "release": "standard-version -a -s",
    "build": "npm run build:flow",
    "build:flow": "mkdir -p lib && cp src/flow/types.js lib/types.js.flow",
    "test": "npm run lint && flow check"
  },
  "keywords": [
    "flow-type",
    "typescript",
    "verdaccio"
  ],
  "author": "Juan Picado <juanpicado19@gmail.com>",
  "private": false,
  "license": "MIT",
  "devDependencies": {
    "@types/node": "10.12.18",
    "babel-eslint": "10.0.1",
    "eslint": "5.12.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-flow-typed": "1.0.1",
    "eslint-plugin-flowtype": "3.2.1",
    "eslint-plugin-prettier": "3.0.1",
    "flow-bin": "0.90.0",
    "husky": "0.14.3",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "standard-version": "4.4.0",
    "typescript": "3.2.4"
  },
  "peerDependencies": {
    "@types/node": "10.12.18",
    "typescript": "3.2.4",
    "flow-bin": "0.90.0"
  },
  "lint-staged": {
    "linters": {
      "package.json": [
        "prettier --write",
        "git add"
      ],
      "*.js": [
        "eslint --fix",
        "git add"
      ]
    }
  }
}
